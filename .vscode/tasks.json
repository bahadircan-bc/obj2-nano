{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++ build active file",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-I/usr/local/include/opencv4",
        "-L/usr/local/lib",
        "-lopencv_core",
        "-lopencv_core.4.5",
        "-lopencv_highgui",
        "-lopencv_imgcodecs",
        "-lopencv_imgproc",
        "-lopencv_videoio",
        "-lopencv_video",
        "-lopencv_calib3d",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-std=c++11",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "revealProblems": "onProblem",
        "reveal": "silent"
    },
      "detail": "Task generated by Debugger."
    },
    {
        "type": "cppbuild",
        "label": "Build and install_name_tool",
        "command": "install_name_tool",
        "args": ["-add_rpath", "/usr/local/lib", "${fileDirname}/${fileBasenameNoExtension}"],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "revealProblems": "onProblem",
            "reveal": "silent"
        },
        "problemMatcher": [],
        "dependsOrder": "sequence",
        "dependsOn": "C/C++: g++ build active file"
    },
    {
        "type": "shell",
        "label": "Cleanup executables",
        "command": "rm",
        "args": ["${fileDirname}/${fileBasenameNoExtension}"],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "revealProblems": "onProblem",
            "reveal": "silent"
        },
        "problemMatcher": [],
    }
  ],
  "version": "2.0.0"
}
